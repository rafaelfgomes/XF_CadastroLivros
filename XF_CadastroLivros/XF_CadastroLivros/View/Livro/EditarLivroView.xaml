<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_CadastroLivros.View.Livro.EditarLivroView" Title="Editar livro">
    <ContentPage.Content>
        
        <StackLayout Padding="10">
            
            <Label Text="Escolha o livro para editar" Font="18" HorizontalOptions="Center" />
            <Label Text="" Font="18"/>

            <ListView x:Name="lstLivrosParaEdicao" ItemsSource="{Binding Livros}" ItemTapped="OnEditarUmLivro" >

                <ListView.ItemTemplate>

                    <DataTemplate>

                        <ViewCell>

                            <StackLayout Padding="5,0,5,0">

                                <Label Text="{Binding NomeDoLivro}" Font="14" />
                                <Label Text="{Binding NomeDoAutorLivro}" Font="12" />

                            </StackLayout>

                        </ViewCell>

                    </DataTemplate>
                    
                </ListView.ItemTemplate>
                
            </ListView>

        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>